{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "postcss.config.js", "tailwind.config.js", "pages/_app.jsx", "components/Nav.jsx", "components/MainNav.jsx", "components/ThemeSwitch.jsx", "pages/_document.jsx", "pages/[pageId].jsx"]
}
